<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="author" content="Team One" />
	<meta name="description" content="" />
	<meta name="application-name" content="Description Here" />

	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>IMP - Login</title>

	<!--Main css-->
	<link rel="stylesheet" href="../css/main.css" />
	<link rel="stylesheet" type="text/css" href="../css/font-awesome.min.css">
</head>
<body>
	<!-- @include "inclide/menu.html" -->
	<div class="container">
				<div class="col-4 col-offset-4">
					<div class="col-6 col-offset-3 align-center">
						<img src="../img/logo.png" alt="" />
					</div>
					<form method="post" action="../index.html">
							<div class="row">
								<div class="form-element">
									<label>Username
										<input id="username" type="text" class="negative" name="" value="" placeholder="Username"/>
									</label>
								</div>
								<div class="form-element">
									<label>Password
										<input id="password" type="password" class="negative" name="" value="" placeholder="Password" />
									</label>
								</div>
								<div class="form-element">
									<div class="left">
											<button type="submit" id="submit" class="btn negative" name="" value="">Login</button>
									</div>
									<div class="right">
											<a id="forgotpassword" class="btn danger">Forgot password</a>
									</div>
								</div>
									<!--<label><span id="forgotpassword">Forgot Password?</span></label>-->
							</div>
					</form>
						<!-- FORGOT PASSWORD -->
						<div class="forgotpasswordmenu row" style="display: none;">
								<div class="form-element">
									<label>Enter your email
										<input id="emailVal" type="text" class="negative" name="" value="" placeholder="name@example.com" />
									</label>
								</div>
								<div class="form-element">
									<input type="submit" id="forgotpwd" class="btn negative" name="" value="Send me validation email" />
								</div>
						</div>
	
	
						<!-- success div -->
						<div class="col-12" id="postvalidation" style="display: none;">
							<p>Successfully sent email to: <span id="useremail"></span></p>
						</div>
	
				</div>
			</div>
			<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
	
		<script>
		$(function(){
	
			document.getElementById('submit').addEventListener("click", function(e) {
				var username = document.getElementById("username").value;
				var password = document.getElementById("password").value;
	
				if(validateUsername(username) && validatePassword(password)){
					//login
				}else{
					e.preventDefault();
				}
	
			});
	
			/* Email validation */
	
			document.getElementById("forgotpwd").addEventListener("click", function(e){
				var email = document.getElementById("emailVal").value;
	
				if(validateEmail(email)){
						$('#postvalidation').show();
						document.getElementById("useremail").innerHTML = email;
				}else{
					//e.preventDefault();
				}
			});
	
		/************************** Functions *********************************/
			function validateUsername(str){
				var trueValue = "student";
				if(str.match(trueValue)){
					return true;
				}
				return false;
			}
			function validatePassword(str){
				var trueValue = "password";
				if(str.match(trueValue)){
					return true;
				}
				return false;
			}
	
			function validateEmail(str){
			var pattern = /(\b[a-zA-Z0-9-_~!$&'()*+,;=:.]+[^.,])@(\b[^-_][a-zA-Z0-9-_]*[^_-])\.(\b[a-zA-Z0-9]{2,63})/;
				//var pattern = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
				if(str.match(pattern)){ //evt bruk pattern.test(str); <- antakeligvis bedre
					return true;
				}
				return false;
			};
	
			/* Forgotpassword */
				$('#forgotpassword').click(function(e) {
						e.preventDefault();
						$('.forgotpasswordmenu').slideToggle();
				});
		});
		</script>
	
		</body>
		</html>
	